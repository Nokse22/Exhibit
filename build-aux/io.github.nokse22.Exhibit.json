{
    "id": "io.github.nokse22.Exhibit",
    "runtime": "org.gnome.Platform",
    "runtime-version": "48",
    "sdk": "org.gnome.Sdk",
    "command": "exhibit",
    "finish-args": [
        "--share=ipc",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--device=dri"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a",
        "/etc",
        "/vtkext",
        "/cmake",
        "/CMakeFiles"
    ],
    "modules": [
        "imagemagick.json",
        "libf3d.json",
        {
            "name": "exhibit",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "dir",
                    "path": "../."
                }
            ]
        }
    ]
}