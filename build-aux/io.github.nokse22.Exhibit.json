{
    "id" : "io.github.nokse22.Exhibit",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "49",
    "sdk" : "org.gnome.Sdk",
    "command" : "exhibit",
    "finish-args" : [
        "--share=ipc",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--device=dri"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        "imagemagick.json",
        "libf3d.json",
        {
            "name" : "exhibit",
            "buildsystem" : "meson",
            "config-opts" : [
                "--libdir=lib"
            ],
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "../."
                }
            ],
            "builddir" : true
        }
    ]
}
